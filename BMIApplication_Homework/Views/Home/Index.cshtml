@model BMIApplication_Homework.Models.BMIModel

@{
    ViewData["Title"] = "BMI Calculator";
}

<h2>BMI Calculator</h2>
<div class="bmi-container">
<form asp-action="Index" method="post">
    <div>
        <label>Height (cm):</label>
        <input asp-for="HeightCm" type="number" step="0.1" required />
    </div>
    <div>
        <label>Weight (kg):</label>
        <input asp-for="WeightKg" type="number" step="0.1" required />
    </div>
    <button type="submit">Calculate BMI</button>
</form>

    @if (Model != null && Model.BmiResult > 0)
    {
        <div>
            <h3>Your BMI: @Model.BmiResult.ToString("0.00")</h3>
            <p>Category: @Model.Category</p>
        </div>
    }

</div>
